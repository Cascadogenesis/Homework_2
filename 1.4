//Реализуйте метод, принимающий в качестве аргумента целочисленный массив,
// и печатающий в консоль сумма элементов какой из половин массива больше.
public class work4 {
    public static void main(String[] args) {
        int[] numbers = {1, 2, 3, 4, 5, 6}; 
        compareHalves(numbers);
    }

    public static void compareHalves(int[] array) {
        int mid = array.length / 2;
        int a = 0;
        int b = 0;

        for (int i = 0; i < mid; i++) {
            a += array[i];
        }

        for (int i = mid; i < array.length; i++) {
            b += array[i];
        }

        System.out.println("Сумма первой половины: " + a);
        System.out.println("Сумма второй половины: " + b);

        if (a > b) {
            System.out.println("Первая половина больше.");
        } else if (a < b) {
            System.out.println("Вторая половина больше.");
        } else {
            System.out.println("Суммы равны.");
        }
    }
}
